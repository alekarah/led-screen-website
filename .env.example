# ── App ────────────────────────────────────────────────────────────────────────
ENVIRONMENT=development        # development | production
PORT=8080
APP_VERSION=0.1.0

# ── Database (Postgres) ───────────────────────────────────────────────────────
# Пример локального DSN (поменяй пароль/хост/базу под себя)
DATABASE_URL=postgres://postgres:password123@localhost:5432/led_display_db?sslmode=disable

# Логгер и пул соединений
DB_LOG_LEVEL=warn              # silent | error | warn | info
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME_MIN=30

# ── Email (опционально) ──────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ── File uploads ──────────────────────────────────────────────────────────────
UPLOAD_PATH=../frontend/static/uploads
MAX_UPLOAD_SIZE=10485760       # 10 MB

# ── Authentication ─────────────────────────────────────────────────────────────
# Секретный ключ для подписи JWT токенов (ОБЯЗАТЕЛЬНО измените в production!)
# Сгенерировать можно командой: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production
